<div class="general-container">

  <%= render "posts/post_class", post: @post %>

  <%= button_to "Delete Post", {:controller => :posts,
      :action => 'destroy', :id => @post.id }, :method => :delete, class:"button" %>

  <%= render "likes/form", post: @post %>

  <div class="post-comments">
    <% @post.comments.each do |comment| %>
      <p>
        <span>
          <%= comment.author.name %> :
        </span>
        <span>
          <%= comment.text %>
        </span>
      </p>
      
      <%= button_to "Delete Comment", {:controller => :comments,
      :action => 'destroy', :post_id => @post.id, :comment_id => comment.id }, :method => :delete, class:"button" %>
    <% end %>
  </div>

  <%= render "comments/form", post: @post %>
</div>