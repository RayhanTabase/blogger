<div class="general-container">
  <%= render "users/user_class", user: @user %>
  
  <% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>

  <% @user.posts.each do |post| %>
    <div>
      <%= link_to controller: "posts", action: "show", id: post.id do %>
        <div class="post-card">
          <p class="title">
            <%= post.title %>
          </p class="text">
            <%= post.text %>
          <div class="additional-details">
            <p class="num_comments"> 
              Comments: <%= post.comments_counter || 0 %> ,
            </p>
            <p class="num_likes"> 
              Likes: <%= post.likes_counter || 0 %>
            </p>
          </div>
        <% end %>
      </div>

      <div class="post-comments">
        <% post.recent_comments.each do |comment| %>
          <p>
            <span>
              <%= comment.author.name %> :
            </span>
            <span>
              <%= comment.text %>
            </span>
          </p>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="align-center">
    <button class="button"> Pagnition </button>
  </div>
</div>