<div class="align-center">
  <button class="button">
    <%= link_to 'Create New Post', new_post_path %>
  </button>
</div>
</br>

<ul class="general-container">
  <% @users.each do |user| %>
    <li class="user-card">
      <%= link_to controller: "users", action: "show", id: user.id do %>
        <div class="image">
          <%= user.photo.nil? ? image_tag(user.photo) : image_tag("placeholder-user.png") %>
        </div>
        <div class="details">
            <h3 class="name">
              <%= user.name %>
            </h3>
          <p class="num-posts">
            Number of posts: <%= user.posts_counter || 0 %>
          </p>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>