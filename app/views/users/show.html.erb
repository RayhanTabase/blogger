<div class="general-container">
  <%= render "users/user_class", user: @user %>
  <div class="bio-card">
    <% @user.bio %>
  </div> 

  <div class="align-center">
    <% @user.recent_posts.each do |post| %>
      <div class="post-card">
        <p class="title">
          <%= post.title %>
        </p class="text">
          <%= post.text %>
        <div class="additional-details">
          <p class="num_comments"> 
            Comments: <%= post.comments_counter || 0 %> ,
          </p>
          <p class="num_likes"> 
            Likes: <%= post.likes_counter %>
          </p>
        </div>
      </div>
    <% end %>

    <button class="button">
      <%= link_to controller: "posts", action: "index", user_id: @user.id do %>
        See all posts 
      <% end %>
     </button>
  </div>
</div>